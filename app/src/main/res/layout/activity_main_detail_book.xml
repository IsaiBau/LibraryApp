<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".MainActivityAddBook">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:backgroundTint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/logo"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="25dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="LibraryApp"
            android:textSize="10pt"
            android:fontFamily="@font/montserrat_bold"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="70dp"/>
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_height="650dp"
        android:backgroundTint="@color/white"
        app:cardCornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView2"
        app:layout_constraintVertical_bias="0.205">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/montserrat_bold"
            android:text="Detalle del Libro"
            android:textColor="@color/black"
            android:textSize="8pt" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="38dp"
            android:fontFamily="@font/medium"
            android:text="Visualice la información del libro."
            android:textColor="@color/secondary"
            android:textSize="7pt" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:strokeColor="@color/border"
            app:strokeWidth="0dp"
            android:layout_marginTop="60dp"
            android:backgroundTint="@color/white"
            app:cardCornerRadius="0dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/book_icon"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="30dp"
                android:layout_marginStart="20dp"
                android:background="@drawable/book_icon"/>
            <TextView
                android:id="@+id/libroTitulo"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center_vertical"
                android:layout_marginEnd="25dp"
                android:layout_marginBottom="75dp"
                android:fontFamily="@font/montserrat_bold"
                android:text="El Libro Troll - ElRubiusOMG"
                android:textSize="13dp"></TextView>

            <TextView
                android:id="@+id/sin"
                android:layout_width="188dp"
                android:layout_height="58dp"
                android:layout_gravity="center_vertical|end"
                android:layout_marginEnd="25dp"
                android:layout_marginBottom="30dp"
                android:fontFamily="@font/medium"
                android:text="Criaturitas del señor, este es el libro de ElRubius, el youtuber con más subs de España: más de 10 millones de suscriptores."
                android:textAlignment="textStart"
                android:textColor="@color/secondary"
                android:textSize="5pt"></TextView>


            <ImageButton
                android:id="@+id/buttonDelete"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="bottom"
                android:layout_marginStart="65dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/delete_button"/>

            <ImageButton
                android:id="@+id/edit"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="bottom|center"
                android:background="@drawable/edit_button"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="20dp"/>

            <ImageButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="bottom|center"
                android:background="@drawable/favorite_button"
                android:layout_marginStart="30dp"
                android:layout_marginBottom="20dp"/>

            <ImageButton
                android:id="@+id/ver"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="bottom|end"
                android:background="@drawable/view_button"
                android:layout_marginEnd="65dp"
                android:layout_marginBottom="20dp"/>


        </com.google.android.material.card.MaterialCardView>

        <!--        Categoria Edit Text-->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|start"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="50dp"
            android:fontFamily="@font/montserrat_bold"
            android:text="Categoria"
            android:textColor="@color/black" />
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center|start"

            android:layout_marginBottom="10dp"
            android:textColorHint="@color/secondary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <AutoCompleteTextView
                android:id="@+id/cat"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_gravity="center|start"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="20dp"
                android:layout_weight="1"
                android:background="@drawable/edit_text_style"
                android:fontFamily="@font/medium"
                android:hint="Elija la categoria..."
                android:paddingStart="10dp"
                android:textColor="@color/secondary"
                android:textColorHint="@color/secondary"
                android:textSize="6pt" />

        </com.google.android.material.textfield.TextInputLayout>


        <!--   Nombre Edit Text     -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|start"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/montserrat_bold"
            android:text="Nombre"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/nom"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_gravity="center|start"
            android:layout_marginStart="20dp"
            android:layout_marginTop="70dp"
            android:layout_marginEnd="20dp"
            android:textColor="@color/secondary"
            android:background="@drawable/edit_text_style"
            android:fontFamily="@font/medium"
            android:text="El libro troll"
            android:paddingStart="10dp"
            android:textColorHint="@color/secondary"
            android:textSize="6pt" />

        <!--        Descripcion EditText-->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|start"
            android:layout_marginStart="20dp"
            android:layout_marginTop="110dp"
            android:fontFamily="@font/montserrat_bold"
            android:text="Sinopsis"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/sinopsisL"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="center|start"
            android:layout_marginStart="20dp"
            android:layout_marginTop="180dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/edit_text_style"
            android:textColor="@color/secondary"
            android:fontFamily="@font/medium"
            android:text="Criaturitas del señor, este es el libro de ElRubius, el youtuber con más subs de España: más de 10 millones de suscriptores."
            android:paddingStart="10dp"

            android:textColorHint="@color/secondary"
            android:textSize="6pt" />

        <android.widget.Button
            android:id="@+id/buttonReturn"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_gravity="bottom|center"
            android:layout_marginBottom="30dp"
            android:background="@drawable/cat_design"
            android:text="Volver"
            android:textColor="@color/white" />


    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>