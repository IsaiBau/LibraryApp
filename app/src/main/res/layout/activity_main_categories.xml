            android:layout_marginEnd="25dp"
            android:layout_marginBottom="50dp"
            android:fontFamily="@font/montserrat_bold"
            android:text="El Libro Troll - ElRubiusOMG"
            android:textSize="13dp"></TextView>

        <TextView
            android:layout_width="188dp"
